<%= form_for @release, :url => {:controller => :scrum_releases_planning, :action => :create, :project_id => @project}, :remote => true do |f| %>

<div id='release_errors'>
<%= f.error_messages %>
</div>

<div class="box">
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :state %><br/>
  	<%= f.select :state, Release::RELEASE_STATUSES%>
  </p>
  
  <p style="float: left">
    <%= f.label :start_date %><br/>
    <%= f.text_field :start_date, :size => 10 %><%= calendar_for('release_start_date') %>
  </p>
  
  <p>
    <%= f.label :release_date %><br/>
    <%= f.text_field :release_date, :size => 10 %><%= calendar_for('release_release_date') %>
  </p>
  
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, :style => 'height:40px'%>
  </p>
  
  <p>
    <%= f.submit l(:button_create) %>
  </p>
</div>
<% end %>
