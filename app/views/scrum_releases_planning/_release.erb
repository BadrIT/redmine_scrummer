  <tr id=<%= "release-#{release.id}"%> class='<%= "release #{cycle 'odd', 'even'} #{release.state.downcase}"%>' >
    <td class="name"><%=h link_to release.name, show_scrum_release_path(:id => release.id, :project_id => @project) %></td>
    <td><%=h release.start_date %></td>
    <td><%=h release.release_date %></td>
    <td><%=h release.state %></td>
    <td><%=h release.description %></td>
    <td><%=h pluralize(release.number_of_points, "point") %></td>
    <td class='buttons'>
        <%= link_to l(:button_edit), edit_scrum_release_path(:id => release.id, :project_id => @project),:class => 'icon icon-edit' %>
        <%= link_to_remote l(:button_delete), :url =>{:action => 'destroy_release', :id => release.id, :project_id => @project}, :confirm => 'Are you sure?', :html =>{:class => 'icon icon-del'} %></td>
  </tr>