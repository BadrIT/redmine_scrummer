<h2>Release</h2>

<% labelled_tabular_form_for :release, @release, :url => {:action => 'update_release',:id => @release.id, :project_id => @project} do |f| %>

  <%= f.error_messages %>

  <div class="box">
  <p>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.text_field :start_date, :size => 10 %><%= calendar_for('release_start_date') %>
  </p>
  <p>
    <%= f.text_field :release_date, :size => 10 %><%= calendar_for('release_release_date') %>
  </p>
  <p>
  	<%= f.select :state, Release::RELEASE_STATUSES%>
  </p>
  <p>
    <%= f.text_area :description, :style => 'height:100px;width:500px'%>
  </p>
  <p>
    <%= submit_tag l(:button_save) %>
  </p>
  </div>
<% end %>

