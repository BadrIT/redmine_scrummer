<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'general.css', :plugin => 'redmine_scrummer' %>
<% end %>

<!-- Rendering the scrummer menu --> 
<%= render :partial => "scrum/scrummer_menu" %>

<div class="contextual">
<%= link_to l(:button_edit), edit_scrum_release_path(:id => @release.id, :project_id => @project), :class => 'icon icon-edit' %>
<%= link_to l(:button_delete), {:action => 'destroy_release', :id => @release.id, :project_id => @project}, :confirm => 'Are you sure?', :class => 'icon icon-del' %>
</div>

<h2><%= @release.name %></h2>

<div id="roadmap">
<p>
  <b><%= l(:start_date) %></b>
  <%=h @release.start_date %>
</p>

<p>
  <b><%= l(:field_release_date) %></b>
  <%=h @release.release_date %>
</p>

<p>
  <b><%= l(:field_state) %></b>
  <%=h @release.state %>
</p>
<p>
  <b><%= l(:number_of_points) %></b>
  <%=h pluralize(@release.number_of_points, "point") %>
</p>

<p>
  <b><%= l(:description) %></b><br/>
  <%=h @release.description %>
</p>
</div>

